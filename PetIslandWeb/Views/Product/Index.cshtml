@model List<ProductModel>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách sản phẩm</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Tên</th>
                <th>Giá</th>
                <th>Mô tả</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    @if (@product.Image == "null.jpg")
                    {
                        <td> <img src="~/images/null.jpg" width="120px" /> </td>
                    }
                    else
                    {
                        <td> <img src="~/images/products/@product.Image" width="120px" height="150px" /> </td>
                    }
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@Html.Raw(@product.Description)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@product.Id">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có sản phẩm nào.</p>
}
