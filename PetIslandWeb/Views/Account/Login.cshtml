@model LoginVM
@{
    ViewData["title"] = "Login";
}

<section>
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account" method="post">
						@Html.AntiForgeryToken()

						<input type="hidden" asp-for="ReturnUrl" />

						<div class="form-group">
							<label>Username or Email</label>
							<input asp-for="Username" class="form-control"/>
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control"/>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>

						<button type="submit" class="btn btn-default">Login</button><br />
						<a asp-action="ForgotPass" asp-controller="Account">Forgot Password</a><br />
						<a asp-action="LoginByGoogle" asp-controller="Account">Login Google</a><br />
						<a asp-action="Create" class="btn btn-primary" asp-controller="Account">Register</a>
					</form>
				</div><!--/login form-->
			</div>
			
			
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
