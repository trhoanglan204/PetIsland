@model SearchVM

<h3>Search Results for "@Model.SearchKey"</h3>

@{
    var totalItems = (Model.Pets?.Count() ?? 0) + (Model.Products?.Count() ?? 0);
}

@if (totalItems == 0)
{
	<p>No results found for @Model.SearchKey</p>
}
else
{
	<p>Found @totalItems items.</p>
}

@if (Model.Pets != null && Model.Pets.Any())
{
    <ul>
        @foreach (var pet in Model.Pets)
        {
            <li>
                <a href="@Url.Action("Detail","Pet", new { id = pet.Id}, protocol: Context.Request.Scheme)">
                    <img src="~/image/pets/@pet.Image" alt="@pet.Name" style="width:50px;height:50px;" />
                    @pet.Name
                </a>
            </li>
        }
    </ul>
}

@if (Model.Products != null && Model.Products.Any())
{
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                <a href="@Url.Action("Detail","Pet", new { id = product.Id}, protocol: Context.Request.Scheme)">
                    <img src="~/images/products/@product.Image" alt="@product.Name" style="width:50px;height:50px;" />
                    @product.Name
                </a>
            </li>
        }
    </ul>
}
