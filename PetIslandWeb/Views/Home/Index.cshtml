@model HomeViewModel

<div class="row pb-3">
    @if(Model != null){
        @if (Model.Products != null)
        {
            @foreach (var product in Model.Products)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="row p-2">
                        <div class="col-12 p-1">
                            <div class="card border-0 p-3 shadow  border-top border-5 rounded">

                                @if (product.ProductImages != null && product.ProductImages.Count() > 0)
                                {
                                    <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                                }
                                else
                                {
                                    <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                                }

                                <div class="card-body pb-0">
                                    <div class="pl-1">
                                        <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                        <p class="card-title text-warning text-center">by <b>@product.Description</b></p>
                                    </div>
                                    <div class="pl-1">
                                        <p class="text-dark text-opacity-75 text-center mb-0">
                                            List Price:
                                            <span class="text-decoration-line-through">
                                                @product.OldPrice.ToString("c")
                                            </span>
                                        </p>
                                    </div>
                                    <div class="pl-1">
                                        <p class="text-dark text-opacity-75 text-center">
                                            As low as:
                                            <span>
                                                @product.Price.ToString("c")
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div>
                                    <a asp-action="Details"
                                       asp-route-productId="@product.Id"
                                       class="btn btn-primary bg-gradient border-0 form-control">
                                        Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        @if (Model.Pets != null)
        {
            @foreach (var pet in Model.Pets)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="row p-2">
                        <div class="col-12 p-1">
                            <div class="card border-0 p-3 shadow  border-top border-5 rounded">

                                @if (pet.PetImages != null && pet.PetImages.Count() > 0)
                                {
                                    <img src="@pet.PetImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                                }
                                else
                                {
                                    <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                                }

                                <div class="card-body pb-0">
                                    <div class="pl-1">
                                        <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@pet.Name</p>
                                    </div>
                                    <div class="pl-1">
                                        <p class="text-dark text-opacity-75 text-center">
                                            As low as:
                                            <span>
                                                @pet.Description
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div>
                                    <a asp-action="Details"
                                       asp-route-productId="@pet.Id"
                                       class="btn btn-primary bg-gradient border-0 form-control">
                                        Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
    else{
        <h2> test</h2>
    }
</div>