@model IEnumerable<ProductCategoryModel>

@{
    ViewData["title"] = "List Category";

    var pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>List Category</h3>
    <h4>Total: @ViewBag.Total Category</h4>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Add Category</a>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Category Slug</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td> @item.Slug </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="ProductCategory" asp-route-Id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="ProductCategory" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_paging" model="@pager" />

</body>
</html>
