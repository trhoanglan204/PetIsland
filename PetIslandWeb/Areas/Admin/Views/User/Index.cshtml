@model List<UserWithRoleVM>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">User List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
                        <td>@item.User?.UserName</td>
						<td>@item.User?.NormalizedEmail</td>
                        <td>@item.RoleName</td>
						<td>
							<a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-id="@item.User?.Id">Edit</a>
							<a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="User" asp-route-id="@item.User?.Id">Delete</a>
						</td>
					</tr>
				}
        </table>

    </div>
</div>