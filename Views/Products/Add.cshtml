@{
	ViewData["Title"] = "Add Product";
}
@model ProductDto
@using PetIsland.Init

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Product</h2>
        <form method="post" enctype="multipart/form-data" asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-sm-8">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-sm-8">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="Tags" class="control-label"></label>
                <div class="col-sm-8">
                    <select asp-for="Tags" class="form-select">
                        <option value='@Initialize.Category.Foods'>Foods</option>
                        <option value='@Initialize.Category.Toys'>Toys</option>
                        <option value='@Initialize.Category.Medicines'>Medicines</option>
                        <option value='@Initialize.Category.Accessories'>Accessories</option>
                        <option value='@Initialize.Category.Hygiene'>Hygiene</option>
                        <option value='@Initialize.Category.Others'>Others</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ImageFile" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
