@model SearchViewModel
@{
    ViewData["Title"] = "Search";
}

@if (Model != null)
{
    <h3>Search Results for "@Model.SearchKey"</h3>

    @if (Model.LPets != null && Model.LPets.Any())
    {
        <ul>
            @foreach (var pet in Model.LPets)
            {
                <li>
                    <a href="/Pets/Details/@pet.PetId">
                        <img src="@pet.ImageUrl" alt="@pet.Name" style="width:50px;height:50px;" />
                        @pet.Name
                    </a>
                </li>
            }
        </ul>
    }

    @if (Model.LProducts != null && Model.LProducts.Any())
    {
        <ul>
            @foreach (var product in Model.LProducts)
            {
                <li>
                    <a href="/Products/Details/@product.Id">
                        <img src="@product.ImageUrl" alt="@product.Name" style="width:50px;height:50px;" />
                        @product.Name
                    </a>
                </li>
            }
        </ul>
    }
}
else
{
    <h3>Not found for "@Model.SearchKey"</h3>
}